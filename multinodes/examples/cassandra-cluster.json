{
	"id": "cassandra-cluster",
	"groups": [{
		"apps": [{
			"id": "cassandra1",
			"container": {
				"docker": {
					"image": "cakesolutions/cassandra:cluster",
					"privileged": true,
					"parameters": [{
						"key": "CASSANDRA_CLUSTERNAME",
						"value": "cassandra-cluster"
					}, {
						"key": "CASSANDRA_SEEDS",
						"value": "172.31.2.11,172.31.2.12,172.31.2.13"
					}, {
						"key": "volume-driver",
						"value": "rexray"
					}, {
						"key": "volume",
						"value": "cassandra1:/var/lib/cassandra"
					}]
				}
			},
			"cpus": 2,
			"mem": 8000,
			"instances": 1,
			"constraints": [
				[
					"hostname",
					"UNIQUE"
				]
			]
		}, {
			"id": "cassandra2",
			"container": {
				"docker": {
					"image": "cakesolutions/cassandra:cluster",
