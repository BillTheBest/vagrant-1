{
	"id": "cassandra-cluster",
	"groups": [{
		"id": "cluster1",
		"apps": [{
			"id": "cassandra1",
			"container": {
				"docker": {
					"image": "jonasrosland/docker-cassandra:cluster",
					"privileged": true,
					"forcePullImage": true,
					"parameters": [{
						"key": "env",
						"value": "CASSANDRA_CLUSTERNAME=cassandra-cluster"
					}, {
						"key": "env",
						"value": "CASSANDRA_SEEDS=172.31.2.11,172.31.2.12,172.31.2.13"
					}, {
						"key": "volume-driver",
						"value": "rexray"
					}, {
						"key": "volume",
						"value": "cassandra1:/var/lib/cassandra"
					}]
				}
			},
			"cpus": 2,
			"mem": 8000,
			"instances": 1,
			"constraints": [
				[
					"hostname",
					"UNIQUE"
				]
			]
		}, {
