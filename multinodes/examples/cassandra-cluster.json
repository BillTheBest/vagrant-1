					}, {
						"key": "volume-driver",
						"value": "rexray"
					}, {
						"key": "volume",
						"value": "cassandra2:/var/lib/cassandra"
					}]
				}
			},
			"cpus": 2,
			"mem": 8000,
			"instances": 1,
			"dependencies": [
				"/cassandra-cluster/cassandra1"
			],
			"constraints": [
				[
					"hostname",
					"UNIQUE"
				]
			]
		}, {
			"id": "cassandra3",
			"container": {
				"docker": {
